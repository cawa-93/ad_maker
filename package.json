{
  "name": "command-editor",
  "productName": "Command.Editor",
  "description": "Быстрый редактор кампаний из Яндекс.Директ Коммандера",
  "version": "0.3.8",
  "repository": "cawa-93/command-editor",
  "scripts": {
    "release": "npm run pack && build -lw --x64 && notify-send 'Компиляция завершена'",
    "build": "npm run pack && build && notify-send 'Компиляция завершена'",
    "build:dir": "npm run pack && build --dir && notify-send 'Компиляция завершена'",
    "dev": "node tasks/runner.js",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack -p --progress --colors --config webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack -p --progress --colors --config webpack.renderer.config.js",
    "vue:route": "node tasks/vue/route.js",
    "vuex:module": "node tasks/vuex/module.js",
    "postinstall": "cd app && npm install"
  },
  "build": {
    "productName": "Command.Editor",
    "appId": "com.electron.command-editor",
    "dmg": {
      "icon": "app/icons/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "win": {
      "icon": "app/icons/icon.ico"
    },
    "nsis": {
      "perMachine": false,
      "runAfterFinish": false,
      "license": "LICENSE",
      "language": "1049"
    },
    "linux": {
      "category": "Utility",
      "icon": "../app/icons/",
      "target": [
        "AppImage"
      ]
    }
  },
  "author": "Alex Kozack <kozackunisoft@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "del": "^2.2.2",
    "devtron": "^1.4.0",
    "electron": "^1.6.0",
    "electron-builder": "^14.4.0",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "^2.1.0",
    "electron-rebuild": "^1.1.3",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "style-loader": "^0.13.2",
    "tree-kill": "^1.1.0",
    "url-loader": "^0.5.8",
    "vue-hot-reload-api": "^2.0.9",
    "vue-html-loader": "^1.2.3",
    "vue-loader": "^11.1.3",
    "vue-style-loader": "^2.0.0",
    "vue-template-compiler": "^2.1.10",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {}
}
